rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // DEFINITIVE ADMIN CHECK - Using safest access methods
    function isSuperAdmin() {
      return request.auth != null && (
        request.auth.uid == 'sxcToczAAwT3Fmh8FPXa1P6hMHB3' || 
        request.auth.token.get('email', '') == 'thorarinnhjalmarsson@gmail.com' ||
        request.auth.token.get('email', '') == 'thorarinnhjalm@gmail.com'
      );
    }

    // 1. NEWSLETTER & CONTACTS (Priority rules)
    // These must be explicitly defined and allow PUBLIC creation
    match /newsletter_subscribers/{subscriberId} {
      allow create: if true;
      allow read, write: if isSuperAdmin();
    }
    
    match /contact_submissions/{submissionId} {
      allow create: if true;
      allow read, write: if isSuperAdmin();
    }

    // 2. MASTER BYPASS (For everything else)
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // 3. PUBLIC FALLBACKS
    match /guest_views/{id} { allow read: if true; }
    match /guestbook/{id} { allow read, create: if true; }
    
    // 4. USER SPECIFIC RULES (Only evaluated if not super admin)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /houses/{houseId} {
      allow get: if true;
      allow read, write: if request.auth != null && (
        resource.data.owner_ids.hasAny([request.auth.uid]) ||
        request.resource.data.manager_id == request.auth.uid
      );
    }

    // Generic fallback for authenticated users
    match /bookings/{id} { allow read, write: if request.auth != null; }
    match /tasks/{id} { allow read, write: if request.auth != null; }
    match /coupons/{id} { allow read: if request.auth != null; }
    match /email_templates/{id} { allow read: if true; }
  }
}
