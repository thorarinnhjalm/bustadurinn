rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // NUCLEAR MASTER RULE
    // If this is you (by UID), you have access to EVERYTHING.
    // No email checks, no complex logic. Just the raw UID.
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == 'sxcToczAAwT3Fmh8FPXa1P6hMHB3';
    }
    
    // Secondary Admin bypass (by email as fallback)
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.get('email', '') == 'thorarinnhjalmarsson@gmail.com';
    }

    // PUBLIC RULES (For everyone else)
    match /newsletter_subscribers/{id} {
      allow create: if true;
    }
    match /contact_submissions/{id} {
      allow create: if true;
    }
    match /guestbook/{id} {
      allow read, create: if true;
    }
    match /guest_views/{id} {
      allow read: if true;
    }

    // NORMAL USER RULES
    function isAuthenticated() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /houses/{houseId} {
      allow get: if true;
      allow read, write: if isAuthenticated() && (
        resource.data.owner_ids.hasAny([request.auth.uid]) ||
        request.resource.data.manager_id == request.auth.uid
      );
    }
    
    // Default fallback rules for authenticated users
    match /bookings/{id} { allow read, write: if isAuthenticated(); }
    match /tasks/{id} { allow read, write: if isAuthenticated(); }
    match /coupons/{id} { allow read: if isAuthenticated(); }
    match /email_templates/{id} { allow read: if true; }
  }
}
