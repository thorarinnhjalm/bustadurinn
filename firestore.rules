rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && (
        request.auth.uid == 'sxcToczAAwT3Fmh8FPXa1P6hMHB3' || 
        request.auth.token.email == 'thorarinnhjalmarsson@gmail.com' ||
        request.auth.token.email == 'thorarinnhjalm@gmail.com'
      );
    }
    
    // MASTER RULE - If you are super admin, you can do anything.
    // This is the most reliable way to ensure you never get locked out.
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }
    
    // Newsletter and Contacts - Public can only CREATE
    match /newsletter_subscribers/{id} {
      allow create: if true;
    }
    match /contact_submissions/{id} {
      allow create: if true;
    }
    
    // Normal user rules below (only apply if not super admin)
    
    function isHouseManager(houseId) {
      return isAuthenticated() && 
        request.auth.uid == get(/databases/$(database)/documents/houses/$(houseId)).data.manager_id;
    }
    
    function isHouseMember(houseId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/houses/$(houseId)).data.owner_ids.hasAny([request.auth.uid]);
    }
    
    match /users/{userId} {
      allow read: if isAuthenticated(); 
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    match /houses/{houseId} {
      allow create: if isAuthenticated() && request.resource.data.manager_id == request.auth.uid;
      allow get: if true;
      allow list: if isAuthenticated() && resource.data.owner_ids.hasAny([request.auth.uid]);
      allow update: if isHouseMember(houseId) || (
        isAuthenticated() && 
        request.resource.data.invite_code == resource.data.invite_code &&
        request.resource.data.owner_ids.size() == resource.data.owner_ids.size() + 1
      );
      allow delete: if isHouseManager(houseId);
    }
    
    match /bookings/{bookingId} {
      allow create: if isHouseMember(request.resource.data.house_id);
      allow read: if isHouseMember(resource.data.house_id);
      allow update, delete: if isAuthenticated() && (
        resource.data.user_id == request.auth.uid || isHouseManager(resource.data.house_id)
      );
    }

    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }

    match /coupons/{couponId} {
      allow read: if isAuthenticated();
    }

    match /email_templates/{templateId} {
      allow read: if true;
    }
    
    // Catch-all for other collections to prevent errors
    match /finance_entries/{id} { allow read, write: if isHouseMember(resource.data.house_id); }
    match /budget_plans/{id} { allow read, write: if isHouseMember(resource.data.house_id); }
    match /shopping_list/{id} { allow read, write: if isHouseMember(resource.data.house_id); }
    match /internal_logs/{id} { allow read, write: if isHouseMember(resource.data.house_id); }
    match /guest_views/{id} { allow read: if true; allow write: if isAuthenticated(); }
    match /guestbook/{id} { allow read, create: if true; allow update, delete: if isAuthenticated(); }
    match /guest_access/{id} { allow read, write: if isAuthenticated(); }
    match /invitations/{id} { allow read: if true; }
    match /funnel_events/{id} { allow create: if isAuthenticated(); }
  }
}
