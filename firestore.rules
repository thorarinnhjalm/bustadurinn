rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ðŸ”’ SECURITY FIX: Newsletter subscribers - only admins can read/update/delete
    match /newsletter_subscribers/{id} {
      allow create: if true; // Anyone can subscribe
      allow read, update, delete: if isSuperAdmin(); // Only admin can manage
    }
    
    // ðŸ”’ SECURITY FIX: Contact submissions - only admins can read
    match /contact_submissions/{id} {
      allow create: if true; // Anyone can submit contact form
      allow read, update, delete: if isSuperAdmin(); // Only admin can view/manage
    }

    // THE MASTER KEY (UID + Email)
    function isSuperAdmin() {
      return request.auth != null && (
        request.auth.uid == 'sxcToczAAwT3Fmh8FPXa1P6hMHB3' || 
        request.auth.token.get('email', '') == 'thorarinnhjalmarsson@gmail.com' ||
        request.auth.token.get('email', '') == 'thorarinnhjalm@gmail.com'
      );
    }

    // MASTER BYPASS
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // PUBLIC ACCESS
    match /guest_views/{id} { allow read: if true; }
    match /guestbook/{id} { allow read, create: if true; }
    
    // USER ACCESS
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isSuperAdmin());
    }

    // RBAC ROLES - Allow users to read their own role
    match /user_roles/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isSuperAdmin());
      allow write: if isSuperAdmin();
    }
    
    // House Member Check Helper
    function isHouseMember(houseId) {
      let houseData = get(/databases/$(database)/documents/houses/$(houseId)).data;
      return request.auth != null && (
        houseData.owner_ids.hasAny([request.auth.uid]) ||
        houseData.manager_id == request.auth.uid ||
        isSuperAdmin()
      );
    }

    match /houses/{houseId} {
      allow get: if true;
      
      // ðŸ”’ SECURITY FIX: Ensure user can only create houses they own
      allow create: if request.auth != null &&
                       request.resource.data.manager_id == request.auth.uid &&
                       request.resource.data.owner_ids.hasAny([request.auth.uid]);
      
      allow update: if request.auth != null && (
        resource.data.manager_id == request.auth.uid ||
        isSuperAdmin()
      );
      
      allow delete: if request.auth != null && (
        resource.data.manager_id == request.auth.uid ||
        isSuperAdmin()
      );
      
      allow list: if request.auth != null && (
        resource.data.owner_ids.hasAny([request.auth.uid]) ||
        resource.data.manager_id == request.auth.uid ||
        isSuperAdmin()
      );

      // Subcollections
      match /bookings/{bookingId} {
        allow read, write: if isHouseMember(houseId);
      }
      match /tasks/{taskId} {
        allow read, write: if isHouseMember(houseId);
      }
      match /shopping_list/{itemId} {
        allow read, write: if isHouseMember(houseId);
      }
      match /internal_logs/{logId} {
        allow read, write: if isHouseMember(houseId);
      }
      match /budget_plans/{planId} {
        allow read, write: if isHouseMember(houseId);
      }
      match /finance_entries/{entryId} {
        allow read, write: if isHouseMember(houseId);
      }
    }

    // LEGACY / TOP-LEVEL (Keep for migration)
    match /bookings/{id} { allow read, write: if request.auth != null; }
    match /tasks/{id} { allow read, write: if request.auth != null; }
    match /shopping_list/{id} { allow read, write: if request.auth != null; }
    match /internal_logs/{id} { allow read, write: if request.auth != null; }
    match /finance_entries/{id} { allow read, write: if request.auth != null; }
    match /budget_plans/{id} { allow read, write: if request.auth != null; }

    match /coupons/{id} { allow read: if request.auth != null; }
    match /email_templates/{id} { allow read: if true; }
    match /invitations/{id} { allow read, write: if request.auth != null; }
    match /notifications/{id} { allow read, write: if request.auth != null; }
    match /funnel_events/{id} { allow create: if true; }
  }
}
