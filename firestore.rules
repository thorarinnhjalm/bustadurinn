rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // THE MASTER KEY
    function isSuperAdmin() {
      return request.auth != null && (
        request.auth.uid == 'sxcToczAAwT3Fmh8FPXa1P6hMHB3' || 
        request.auth.token.get('email', '') == 'thorarinnhjalmarsson@gmail.com' ||
        request.auth.token.get('email', '') == 'thorarinnhjalm@gmail.com'
      );
    }

    // NEWSLETTER - Open up read access to authenticated users for debugging
    match /newsletter_subscribers/{docId} {
      allow create: if true;
      allow read: if request.auth != null; 
      allow write: if isSuperAdmin();
    }
    
    match /contact_submissions/{docId} {
      allow create: if true;
      allow read, write: if isSuperAdmin();
    }

    // GLOBAL ADMIN BYPASS
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // PUBLIC ACCESS
    match /guest_views/{id} { allow read: if true; }
    match /guestbook/{id} { allow read, create: if true; }
    
    // USER ACCESS
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /houses/{houseId} {
      allow get: if true;
      allow read, write: if request.auth != null && (
        resource.data.owner_ids.hasAny([request.auth.uid]) ||
        request.resource.data.manager_id == request.auth.uid
      );
    }

    match /bookings/{id} { allow read, write: if request.auth != null; }
    match /tasks/{id} { allow read, write: if request.auth != null; }
    match /coupons/{id} { allow read: if request.auth != null; }
    match /email_templates/{id} { allow read: if true; }
  }
}
